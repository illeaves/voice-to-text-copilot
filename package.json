{
  "name": "voice-to-text-copilot",
  "displayName": "Voice to Text (also for Copilot Chat)",
  "description": "Whisperを利用した音声入力拡張。APIモード(クラウド・高精度)とローカルモード(オフライン・無料)から選択可能。(Voice input extension with API mode [cloud, accurate] or Local mode [offline, free] using Whisper.)",
  "publisher": "aleaf",
  "version": "1.6.9",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI"
  ],
  "keywords": [
    "voice input",
    "speech to text",
    "voice to text",
    "copilot",
    "copilot chat",
    "openai",
    "whisper",
    "whisper.cpp",
    "transcription",
    "audio input",
    "speech recognition",
    "vscode",
    "ai",
    "productivity",
    "voice typing",
    "offline",
    "local mode",
    "api mode",
    "音声入力",
    "音声認識",
    "文字起こし",
    "テキスト化",
    "音声をテキストに変換",
    "AI入力",
    "Copilot チャット",
    "VS Code 音声入力",
    "オフライン",
    "ローカルモード"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "%title%",
      "properties": {
        "voiceToText.mode": {
          "type": "string",
          "enum": [
            "api",
            "local"
          ],
          "default": "api",
          "description": "%config.mode.description%",
          "order": 1
        },
        "voiceToText.localModel": {
          "type": "string",
          "enum": [
            "tiny",
            "base",
            "small",
            "medium",
            "large"
          ],
          "default": "base",
          "description": "%config.localModel.description%",
          "order": 2
        },
        "voiceToText.maxRecordSeconds": {
          "type": "number",
          "default": 180,
          "minimum": 10,
          "maximum": 600,
          "description": "%config.maxRecordSeconds%",
          "order": 3
        },
        "voiceToText.enableTranslation": {
          "type": "boolean",
          "default": false,
          "description": "%config.enableTranslation.description%",
          "order": 4
        },
        "voiceToText.promptPreset": {
          "type": "string",
          "enum": [
            "none",
            "web",
            "backend",
            "mobile",
            "ai",
            "cloud",
            "devops",
            "javascript",
            "typescript",
            "python",
            "git",
            "vscode"
          ],
          "enumDescriptions": [
            "%config.promptPreset.none%",
            "%config.promptPreset.web%",
            "%config.promptPreset.backend%",
            "%config.promptPreset.mobile%",
            "%config.promptPreset.ai%",
            "%config.promptPreset.cloud%",
            "%config.promptPreset.devops%",
            "%config.promptPreset.javascript%",
            "%config.promptPreset.typescript%",
            "%config.promptPreset.python%",
            "%config.promptPreset.git%",
            "%config.promptPreset.vscode%"
          ],
          "default": "none",
          "description": "%config.promptPreset.description%",
          "order": 5
        },
        "voiceToText.customPrompt": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "markdownDescription": "%config.customPrompt.description%",
          "order": 6
        },
        "voiceToText.language": {
          "type": "string",
          "enum": [
            "ja",
            "en",
            "fr",
            "es",
            "zh",
            "ko",
            "de",
            "it",
            "ru"
          ],
          "enumDescriptions": [
            "日本語",
            "English",
            "Français",
            "Español",
            "中文",
            "한국어",
            "Deutsch",
            "Italiano",
            "Русский"
          ],
          "default": "",
          "description": "%config.language%",
          "order": 7
        },
        "voiceToText.suppressNonSpeech": {
          "type": "boolean",
          "default": true,
          "description": "%config.suppressNonSpeech.description%",
          "order": 8
        },
        "voiceToText.threads": {
          "type": "number",
          "default": 0,
          "description": "%config.threads.description%",
          "order": 9
        },
        "voiceToText.enableVAD": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableVAD.description%",
          "order": 10
        },
        "voiceToText.customDictionary": {
          "type": "object",
          "default": {},
          "description": "%config.customDictionary.description%",
          "order": 11,
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "commands": [
      {
        "command": "voiceToText.toggle",
        "title": "Voice to Text: Start / Stop Recording (Paste to Current Focus)"
      },
      {
        "command": "voiceToText.toggleForChat",
        "title": "Voice to Text: Start / Stop Recording (Paste to Copilot Chat)"
      },
      {
        "command": "voiceToText.cancelRecording",
        "title": "Voice to Text: Cancel Recording / Processing"
      },
      {
        "command": "voiceToText.setApiKey",
        "title": "Voice to Text: Set OpenAI API Key"
      },
      {
        "command": "voiceToText.setupWizard",
        "title": "Voice to Text: Run Setup Wizard"
      },
      {
        "command": "voiceToText.showHistory",
        "title": "Voice to Text: Show History"
      },
      {
        "command": "voiceToText.openCustomBuildFolder",
        "title": "Voice to Text: Open Custom Build Folder (for GPU builds)"
      },
      {
        "command": "voiceToText.cleanUp",
        "title": "Voice to Text: Clean Up (Remove Models & Custom Builds)"
      }
    ],
    "keybindings": [
      {
        "command": "voiceToText.cancelRecording",
        "key": "escape",
        "when": "!terminalFocus && !findInputFocussed && !renameInputVisible"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/illeaves/voice-to-text-copilot"
  },
  "bugs": {
    "url": "https://github.com/illeaves/voice-to-text-copilot/issues"
  },
  "homepage": "https://github.com/illeaves/voice-to-text-copilot#readme",
  "license": "MIT",
  "vsce": {
    "dependencies": true,
    "yarn": false
  },
  "dependencies": {
    "openai": "^6.2.0"
  }
}
